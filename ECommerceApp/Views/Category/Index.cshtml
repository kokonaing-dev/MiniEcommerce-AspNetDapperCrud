@model List<ECommerceApp.DTOs.CategoryDto>

<h2>Categories</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" href="/Category/Create">
        <i class="bi bi-plus-circle"></i> Add Category
    </a>
</div>

@{
    int sn = 1;
}

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>SN</th>
            <th>Name</th>
            <th>Created</th>
            <th style="width:150px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@sn</td>
                <td>@item.Name</td>
                <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" href="/Category/Details/@item.Id" title="Details">
                        <i class="bi bi-eye"></i>
                    </a>

                    <a class="btn btn-outline-warning btn-sm" href="/Category/Edit/@item.Id" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>

                    <a class="btn btn-outline-danger btn-sm" href="/Category/Delete/@item.Id" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
            sn++;
        }
    </tbody>
</table>
