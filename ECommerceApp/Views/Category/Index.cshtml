@model List<ECommerceApp.DTOs.CategoryDto>

<h2>Products</h2>

<a class="btn btn-primary" href="/Category/Create">Create Category</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-info" href="/Category/Details/@item.Id">Details</a>
                    <a class="btn btn-warning" href="/Category/Edit/@item.Id">Edit</a>
                    <a class="btn btn-danger" href="/Category/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
