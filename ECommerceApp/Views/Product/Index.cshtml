@model List<ECommerceApp.DTOs.ProductDto>

<h2>Products</h2>

<a class="btn btn-primary" href="/Product/Create">Create Product</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CategoryName</td>
                <td>@item.Price</td>
                <td><img src="@item.ImageUrl" width="60" /></td>
                <td>
                    <a class="btn btn-info" href="/Product/Details/@item.Id">Details</a>
                    <a class="btn btn-warning" href="/Product/Edit/@item.Id">Edit</a>
                    <a class="btn btn-danger" href="/Product/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
